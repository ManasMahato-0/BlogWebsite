  <section class="get-in-touch">
    <form action="/profile" method="POST" class="contact-form row">
       <div class="form-field col-lg-6">
          <input name="title" id="name" class="input-text js-input" type="text" required>
          <label class="label" for="name">Title</label>
       </div>
       <div class="form-field col-lg-6 ">
          <input name="description" id="email" class="input-text js-input" type="text" required>
          <label class="label" for="email">Description</label>
       </div>
       <div class="form-field col-lg-6 ">
          <input name="author" id="company" class="input-text js-input" type="text" required>
          <label class="label" for="company">Author Name</label>
       </div>
        <div class="form-field col-lg-6 ">
          <input name="date" id="phone" class="input-text js-input" type="datetime" required>
          <label class="label" for="phone">Date</label>
       </div>
       <div class="form-field col-lg-12">
          <textarea name="blog" id="message" class="input-text js-input" rows="10" cols="50" required></textarea>
          <label class="label" for="message">Blog</label>
       </div>
       <div class="form-field col-lg-12">
          <input class="submit-btn" type="submit" value="Submit">
       </div>
    </form>
